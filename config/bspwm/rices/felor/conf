padding-left = 2
padding-right = 2

modules-left = bspwm 
wm-restack = bspwm

; }}}

; DUNST-TOOGLE {{{

[module/dunst-toggle]
type = custom/ipc
hook-0 = echo "%{T3}%{T-}"
hook-1 = echo "%{T3}%{T-}"
initial = 1
click-left = ~/.config/bspwm/rices/felor/polybar/scripts/poly-dunst.sh &
format-padding = 2
format-background = ${felor.backlight}

; }}}

; UPTIME {{{
