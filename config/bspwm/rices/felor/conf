; BASE BAR {{{

[bar/base]
;monitor = ${env:MONITOR:HDMI-1}
width = 98.5%
height = 25
offset-x = 10
offset-y = 10
fixed-center = true
enable-ipc = true

line-size = 0
line-color = #fff

background = ${felor.background}
foreground = ${felor.foreground}

border-size = 2
border-color = ${felor.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

; Text
font-0 = "JetBrainsMono:style=Bold:pixelsize=9;3"
; Icons
font-1 = "Font Awesome 6 Free Solid:size=10;3"
font-2 = "Material Design Icons Desktop:size=11;3"
font-3 = "Material Design Icons Desktop:size=15;5"
; Glyphs
font-4 = "MesloLGS NF:style=Regular:size=15;4"
;dpi = 96

modules-left = date layout
modules-center = bspwm
modules-right = recorder-status pulseaudio wlan

;tray-position = right
;tray-padding = 4
;tray-background = ${felor.background}
;tray-maxsize = 16

cursor-click = pointer
;cursor-scroll = ns-resize

wm-restack = bspwm

; }}}

; I3-BAR {{{
[bar/i3-bar]
inherit = bar/base
modules-left = i3 
wm-restack = i3
override-redirect = true
; }}}

; BSPWM-BAR {{{
[bar/bspwm-bar]
